    <!-- JAVASCRIPT LOGIC -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // 1. Initialize Animation & Icons
        AOS.init();
        lucide.createIcons();

        // 2. Mobile Menu Logic
        const mobileMenu = document.getElementById('mobileMenu');
        function toggleMobileMenu() {
            mobileMenu.classList.toggle('hidden');
            mobileMenu.classList.toggle('flex');
        }

        // 3. WhatsApp Logic
        const MY_PHONE = "6289517634196";
        
        function openWA(message) {
            const url = `https://wa.me/${MY_PHONE}?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }

        function checkAvailability() {
            const date = document.getElementById('inputDate').value;
            const pax = document.getElementById('inputPax').value;
            const msg = `Assalamu'alaikum, saya ingin cek ketersediaan Umrah:\n- Tanggal: ${date || 'Belum ditentukan'}\n- Jamaah: ${pax || 'Belum ditentukan'} Pax`;
            openWA(msg);
        }

        // 4. Particle Dust Generator
        const particleContainer = document.getElementById('particles');
        for (let i = 0; i < 20; i++) {
            let p = document.createElement('div');
            p.className = 'particle';
            let size = Math.random() * 3 + 1;
            p.style.width = size + 'px';
            p.style.height = size + 'px';
            p.style.left = Math.random() * 100 + '%';
            p.style.top = Math.random() * 100 + '%';
            p.style.animationDuration = (Math.random() * 10 + 5) + 's';
            p.style.animationDelay = Math.random() * 5 + 's';
            particleContainer.appendChild(p);
        }

        // 5. AI Chatbot Logic (Smart Response)
        const chatBox = document.getElementById('chatBox');
        
        function toggleChat() {
            if (chatBox.classList.contains('hidden')) {
                chatBox.classList.remove('hidden');
                setTimeout(() => {
                    chatBox.classList.remove('translate-y-10', 'opacity-0');
                }, 10);
            } else {
                chatBox.classList.add('translate-y-10', 'opacity-0');
                setTimeout(() => {
                    chatBox.classList.add('hidden');
                }, 300);
            }
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const text = input.value.trim();
            if (!text) return;

            // Add User Message
            addMessage(text, 'user');
            input.value = '';

            // AI Thinking Delay
            setTimeout(() => {
                // Show thinking indicator could be added here
                const response = getAIResponse(text);
                addMessage(response, 'ai');
                
                // Jika fallback, show WA button
                if (response.includes("menyambungkan Anda")) {
                    setTimeout(() => addWAButton(), 500);
                }
            }, 1000);
        }

        function addMessage(text, sender) {
            const container = document.getElementById('chatMessages');
            const div = document.createElement('div');
            div.className = `flex ${sender === 'user' ? 'justify-end' : 'justify-start'}`;
            
            const bubble = document.createElement('div');
            bubble.className = `max-w-[85%] p-3 text-xs leading-relaxed ${sender === 'user' 
                ? 'bg-gold text-black rounded-l-xl rounded-tr-xl font-medium' 
                : 'bg-white/10 text-marble border border-white/5 rounded-r-xl rounded-tl-xl'}`;
            bubble.innerText = text;
            
            div.appendChild(bubble);
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
        }

        function addWAButton() {
            const container = document.getElementById('chatMessages');
            const div = document.createElement('div');
            div.className = 'flex justify-start';
            div.innerHTML = `
                <button onclick="openWA('Halo, saya diarahkan Chatbot')" class="bg-green-600 text-white px-4 py-2 rounded-lg text-xs font-bold hover:bg-green-700 flex items-center gap-2 transition-colors">
                    <i data-lucide="message-circle" class="w-3 h-3"></i> Chat WhatsApp
                </button>
            `;
            container.appendChild(div);
            lucide.createIcons(); // Refresh icons
            container.scrollTop = container.scrollHeight;
        }

        function getAIResponse(input) {
            const lower = input.toLowerCase();
            if (lower.includes('harga') || lower.includes('biaya')) return "Paket mulai Rp 42,5 Juta (Heritage) hingga Rp 185 Juta (Gold Royal). Termasuk hotel & visa.";
            if (lower.includes('lokasi') || lower.includes('alamat')) return "Kantor pusat kami di Surabaya, namun kami melayani jamaah seluruh Indonesia secara digital.";
            if (lower.includes('visa')) return "Kami menggunakan Visa Muqeem Instant Approval dengan tingkat keberhasilan 99.9%.";
            if (lower.includes('hotel')) return "Untuk Gold kami bekerjasama dengan Dar Al Tawhid (0 Meter), Silver dengan Mövenpick.";
            return "Pertanyaan bagus. Untuk detail tersebut, izinkan saya menyambungkan Anda ke agen manusia via WhatsApp.";
        }
    </script>
</body>
</html>
